<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
    version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">
    <persistence-unit name="croquet" transaction-type="JTA">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <jta-data-source>jdbc/croquet</jta-data-source>
        <class>uk.org.harwellcroquet.server.entity.Entrant</class>
        <class>uk.org.harwellcroquet.server.entity.Event</class>
        <class>uk.org.harwellcroquet.server.entity.FileData</class>
        <class>uk.org.harwellcroquet.server.entity.FileName</class>
        <class>uk.org.harwellcroquet.server.entity.Fixture</class>
        <class>uk.org.harwellcroquet.server.entity.FixtureName</class>
        <class>uk.org.harwellcroquet.server.entity.Item</class>
        <class>uk.org.harwellcroquet.server.entity.Result</class>
        <class>uk.org.harwellcroquet.server.entity.Status</class>
        <class>uk.org.harwellcroquet.server.entity.User</class>

        <properties>
            <!-- EclipseLink should create the database schema automatically -->
            <property name="eclipselink.ddl-generation" value="create-tables" />
            <property name="eclipselink.ddl-generation.output-mode" value="both" />
        </properties>

    </persistence-unit>
</persistence>