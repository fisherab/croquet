<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.label {
			width: 12em;
		}
		
		.narrow {
			max-width: 40em;
		}
	</ui:style>


	<g:VerticalPanel>

		<g:HTML addStyleNames='{style.narrow}'>
			<h2>Reset Password</h2>
			<p>Please enter a new password to replace the one you have forgotten
				- you must enter the same value in both boxes.</p>
		</g:HTML>

		<g:HorizontalPanel>
			<g:Label addStyleNames='{style.label}'>Password</g:Label>
			<g:PasswordTextBox ui:field="password"></g:PasswordTextBox>
		</g:HorizontalPanel>
		<g:HorizontalPanel title="This must match the one above">
			<g:Label addStyleNames='{style.label}'>Password - repeat</g:Label>
			<g:PasswordTextBox ui:field="password2"></g:PasswordTextBox>
		</g:HorizontalPanel>
		<g:Button ui:field="submitButton">Submit</g:Button>

	</g:VerticalPanel>

</ui:UiBinder> 



